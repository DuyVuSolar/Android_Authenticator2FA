<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AdAttribution">
        <item name="android:layout_width">@dimen/_13sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--        <item name="android:windowIsFloating">true</item>-->
<!--        <item name="android:windowSoftInputMode">adjustResize</item>-->
<!--        <item name="colorControlNormal">@color/primary</item>-->
<!--        <item name="colorControlActivated">@color/primary</item>-->
<!--        <item name="colorControlHighlight">@color/primary</item>-->
    </style>

    <style name="CustomCardCorners" parent="@style/carbon_FrameLayout">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="TextBottomBar_Selector">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="background">@color/transparent</item>
        <item name="fontFamily">@font/pp_600</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
    </style>

    <style name="EditTextCursorBlack">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="DialogEditText" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="DividerMaxWith">
        <item name="background">@color/color_divider</item>
    </style>

    <style name="DividerDrawer" parent="DividerMaxWith">
        <item name="android:layout_marginStart">@dimen/drawer_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/drawer_horizontal_margin</item>
    </style>

    <declare-styleable name="UnderlinedTextView" >
        <attr name="underlineHeight" format="dimension" />
        <attr name="underlineOffset" format="dimension" />
        <attr name="underlineColor" format="color" />
        <attr name="underLinePosition" format="enum">
            <enum name="baseline" value="0" />
            <enum name="below" value="1" />
        </attr>
    </declare-styleable>

    <style name="BlackTextAccent">
        <item name="colorAccent">@color/black_text</item> <!-- Whatever color you want-->
    </style>

    <style name="BottomSheetDialogAnimation" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="BottomSheetDialogAnimationUp" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ItemSetting">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="AppTheme.Ads" parent="Theme.AppCompat.Light">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/pp_600</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/bg_ads</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">13.0px</item>
        <item name="android:minHeight">13.0px</item>
        <item name="android:text">AD</item>
    </style>

    <style name="WidgetTextStyleFont700">
        <item name="android:fontFamily">@font/pp_700</item>
    </style>
</resources>