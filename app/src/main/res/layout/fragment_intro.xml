<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.beemdevelopment.aegis.ui_old.activity.intro.IntroViewModel" />

        <variable
            name="item"
            type="com.beemdevelopment.aegis.model.IntroSplash" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">

        <carbon.widget.ImageView
            android:id="@+id/imvIntroReal"
            setImageResNoCache="@{item.res}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/bg_intro4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            setImageAnyNormal="@{item.title}"
            android:layout_marginHorizontal="@dimen/_38sdp"
            app:layout_constraintBottom_toTopOf="@+id/cvNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/bg_title_intro4" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:layout_marginBottom="250dp"
            android:background="#EE4283"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{() -> viewmodel.onClickContinue()}"
            android:stateListAnimator="@xml/button_fade"
            android:visibility="@{item.showNativeFull ? View.GONE : View.VISIBLE}"
            app:cardBackgroundColor="#EE4283"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/transparent"
            app:strokeWidth="@dimen/_1sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <carbon.widget.TextView
                    android:id="@+id/tvNextBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:fontFamily="@font/nunito_900_italic"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    tools:text="@string/next" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/ic_play_intro_white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

        <!--native full-->
        <FrameLayout
            android:id="@+id/fl_adplaceholderFull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{item.showNativeFull ? View.VISIBLE : View.GONE}">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_containerFull"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/full_screen_native_ads" />
            </com.facebook.shimmer.ShimmerFrameLayout>
        </FrameLayout>

        <!--native bottom-->
        <FrameLayout
            android:id="@+id/fl_adplaceholder"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:visibility="@{item.showNative ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/native_admob_ad_intro" />
            </com.facebook.shimmer.ShimmerFrameLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>