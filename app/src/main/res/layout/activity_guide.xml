<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="maxSingleton"
            type="com.beemdevelopment.aegis.utils.MaxUtils" />

        <variable
            name="viewmodel"
            type="com.beemdevelopment.aegis.ui_old.activity.guide.GuideViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vPagerGuideFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        loadingview-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"
            android:visibility="@{maxSingleton.showLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                setImageAnySkipWH="@{@drawable/bg_splash}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_splash" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_bg_splash_loading"
                android:layout_width="@dimen/_107sdp"
                android:layout_height="@dimen/_107sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:src="@drawable/bg_loading_splash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_loading"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_38sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_bg_splash_loading"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/splash_loading" />

            <TextView
                android:id="@+id/textLoadADs"
                app:layout_constraintTop_toBottomOf="@id/iv_bg_splash_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_31sdp"
                android:layout_marginEnd="@dimen/_31sdp"
                android:fontFamily="@font/pp_800"
                android:gravity="center"
                android:text="@string/loading_ads"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        load AOA-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loadingViewAOA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"
            android:visibility="@{maxSingleton.showLoadingAOA ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                setImageAnySkipWH="@{@drawable/bg_splash}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_splash" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_bg_splash_loadingAOA"
                android:layout_width="@dimen/_107sdp"
                android:layout_height="@dimen/_107sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:src="@drawable/bg_loading_splash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_loadingAOA"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_38sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_bg_splash_loadingAOA"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/splash_loading" />


            <TextView
                android:id="@+id/textLoadAOA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_31sdp"
                android:layout_marginEnd="@dimen/_31sdp"
                android:fontFamily="@font/pp_800"
                android:gravity="center"
                android:text="@string/welcome_back"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/iv_bg_splash_loadingAOA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/loadingViewAOASplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone"
            android:background="#FFFFFF"
            android:elevation="@dimen/_4sdp"
            android:visibility="@{maxSingleton.showLoadingAOASplash ? View.VISIBLE : View.GONE}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>