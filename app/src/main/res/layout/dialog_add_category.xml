<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_45"
        android:fitsSystemWindows="false"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvOutside"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <carbon.widget.ConstraintLayout
            android:id="@+id/clMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--        data-->
            <carbon.widget.ConstraintLayout
                android:id="@+id/clData"
                android:layout_width="0dp"
                android:layout_height="@dimen/_147sdp"
                android:layout_margin="@dimen/_25sdp"
                android:background="@color/white"
                app:carbon_cornerRadius="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSelectAlbum"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_marginTop="@dimen/_5sdp">

                    <carbon.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pp_600"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/category"
                        android:textColor="#32355D"
                        android:textSize="@dimen/_15ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@color/transparent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSetting"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clSelectAlbum">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <carbon.widget.FrameLayout
                            android:id="@+id/flName"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:background="#F5F5F5"
                            android:fontFamily="@font/pp_400"
                            android:hint="@string/enter_file_name"
                            android:imeOptions="actionDone"
                            android:maxLength="300"
                            android:singleLine="true"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/_13ssp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:carbon_cornerRadius="@dimen/_7sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <carbon.widget.EditText
                                android:id="@+id/edtName"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="#F2F2F7"
                                android:fontFamily="@font/pp_600"
                                android:imeOptions="actionDone"
                                android:maxLength="25"
                                android:textColorHint="@color/black_30"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="0dp"
                                android:paddingEnd="@dimen/_40sdp"
                                android:paddingBottom="0dp"
                                android:singleLine="true"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/_14ssp"
                                app:carbon_cornerRadius="@dimen/_7sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/vCreatePdf"
                                app:layout_constraintTop_toBottomOf="@+id/vCreatePdf" />

                        </carbon.widget.FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCurrentLength"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/pp_500"
                            android:gravity="end"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintEnd_toEndOf="@+id/flName"
                            app:layout_constraintTop_toBottomOf="@+id/flName"
                            tools:text="6/25" />

                        <!--                            <carbon.widget.ImageView-->
                        <!--                                android:id="@+id/imvClearText"-->
                        <!--                                android:layout_width="@dimen/_20sdp"-->
                        <!--                                android:layout_height="@dimen/_20sdp"-->
                        <!--                                android:layout_marginEnd="@dimen/_7sdp"-->
                        <!--                                android:src="@drawable/ic_clear_text_gray_circle"-->
                        <!--                                app:carbon_cornerRadius="@dimen/_10sdp"-->
                        <!--                                app:layout_constraintBottom_toBottomOf="@+id/flName"-->
                        <!--                                app:layout_constraintEnd_toEndOf="@+id/flName"-->
                        <!--                                app:layout_constraintTop_toTopOf="@+id/flName" />-->

                        <!--cancel-->
                        <carbon.widget.TextView
                            android:id="@+id/tvCancel"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/pp_500"
                            android:foreground="?android:selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/_15ssp"
                            app:carbon_cornerRadius="@dimen/_19sdp"
                            app:carbon_cornerRadiusBottomStart="@dimen/_13sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvChange"
                            app:layout_constraintEnd_toStartOf="@+id/tvChange"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvChange" />

                        <carbon.widget.ImageView
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="#A3A3A3"
                            app:carbon_cornerRadius="1dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCancel"
                            app:layout_constraintEnd_toStartOf="@+id/tvChange"
                            app:layout_constraintStart_toEndOf="@+id/tvCancel"
                            app:layout_constraintTop_toTopOf="@+id/tvCancel" />

                        <!--change-->
                        <carbon.widget.TextView
                            android:id="@+id/tvChange"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:fontFamily="@font/pp_700"
                            android:foreground="?selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/save"
                            android:textColor="#3A64FC"
                            android:textSize="@dimen/_14ssp"
                            app:carbon_cornerRadiusBottomEnd="@dimen/_13sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tvCancel" />

                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintBottom_toTopOf="@+id/tvChange"
                            android:background="#5C3C3C43"
                            android:layout_width="match_parent"
                            android:layout_height="1px"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </carbon.widget.ConstraintLayout>

        </carbon.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
