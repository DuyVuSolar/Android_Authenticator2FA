<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.beemdevelopment.aegis.utils.Constant" />

        <import type="android.view.View" />

        <variable
            name="maxSingleton"
            type="com.beemdevelopment.aegis.utils.MaxUtils" />

        <variable
            name="viewmodel"
            type="com.beemdevelopment.aegis.ui_old.activity.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/clRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <!--        loading when click widget -> go to detail-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLoadingWidget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                setImageAnyNormal="@{@drawable/bg_home}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_home" />

            <ProgressBar
                android:id="@+id/pvLoading"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:theme="@style/BlackTextAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNoInternet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:visibility="@{viewmodel.hasConnectedInternet ? View.GONE : View.VISIBLE}"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                setImageAnyNormal="@{@drawable/bg_home}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_home" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pp_700"
                android:gravity="center"
                android:text="@string/stay_online_nfor_a_better_experience"
                android:textColor="#0E0E12"
                android:textSize="@dimen/_21ssp"
                app:layout_constraintBottom_toTopOf="@+id/imvGif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvGif"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/ic_earth_no_internet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvToastNoInternet"
                android:layout_width="0dp"
                android:layout_height="@dimen/_33sdp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/bg_toast_no_internet"
                app:layout_constraintBottom_toBottomOf="@+id/imvGif"
                app:layout_constraintDimensionRatio="279:108"
                app:layout_constraintEnd_toEndOf="@+id/imvGif"
                app:layout_constraintStart_toStartOf="@+id/imvGif"
                app:layout_constraintTop_toTopOf="@+id/imvGif"
                app:layout_constraintVertical_bias="0.4" />

            <carbon.widget.TextView
                android:id="@+id/imvBG"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/black_text"
                app:carbon_cornerRadius="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="@+id/imvRetry"
                app:layout_constraintEnd_toEndOf="@+id/imvRetry"
                app:layout_constraintStart_toStartOf="@+id/imvRetry"
                app:layout_constraintTop_toTopOf="@+id/imvRetry" />

            <carbon.widget.TextView
                android:id="@+id/imvRetry"
                deboundClick="@{v -> viewmodel.onConnectAgainInternet()}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_white_gray_pressed"
                android:fontFamily="@font/pp_600"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_40sdp"
                android:singleLine="true"
                android:text="@string/connect"
                android:textColor="#C8FD36"
                android:textSize="@dimen/_14ssp"
                app:carbon_cornerRadius="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imvGif" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"
            android:visibility="@{maxSingleton.showLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                setImageAnySkipWH="@{@drawable/bg_splash}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_splash" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_bg_splash_loading"
                android:layout_width="@dimen/_107sdp"
                android:layout_height="@dimen/_107sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:src="@drawable/bg_loading_splash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_loading"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_38sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_bg_splash_loading"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/splash_loading" />

            <TextView
                android:id="@+id/textLoadADs"
                app:layout_constraintTop_toBottomOf="@id/iv_bg_splash_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_31sdp"
                android:layout_marginEnd="@dimen/_31sdp"
                android:fontFamily="@font/pp_800"
                android:gravity="center"
                android:text="@string/loading_ads"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        load AOA-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loadingViewAOA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"
            android:visibility="@{maxSingleton.showLoadingAOA ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                setImageAnySkipWH="@{@drawable/bg_splash}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_splash" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_bg_splash_loadingAOA"
                android:layout_width="@dimen/_107sdp"
                android:layout_height="@dimen/_107sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:src="@drawable/bg_loading_splash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_loadingAOA"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_38sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_bg_splash_loadingAOA"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/splash_loading" />


            <TextView
                android:id="@+id/textLoadAOA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_31sdp"
                android:layout_marginEnd="@dimen/_31sdp"
                android:fontFamily="@font/pp_800"
                android:gravity="center"
                android:text="@string/welcome_back"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/iv_bg_splash_loadingAOA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/loadingViewAOASplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:elevation="@dimen/_4sdp"
            android:visibility="@{maxSingleton.showLoadingAOASplash ? View.VISIBLE : View.GONE}"
            tools:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>